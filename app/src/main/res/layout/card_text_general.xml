<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.CardContent"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        >

        <LinearLayout
            android:id="@+id/card_content_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            style="@style/Widget.CardContent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/card_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Header"
                    android:layout_gravity="left|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:id="@+id/card_body_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Bacon ipsum dolor amet ball tip fatback pork loin spare ribs turducken porchetta. Andouille doner sirloin cow. Jerky leberkas andouille chuck, meatloaf flank pork loin filet mignon spare ribs. Fatback spare ribs kevin doner."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />



        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>